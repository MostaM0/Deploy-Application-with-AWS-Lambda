{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "update-todo-request",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 50,
      "pattern": "^[a-zA-Z0-9 ]+$"
    },
    "dueDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "done": {
      "type": "boolean"
    }
  },
  "required": ["name", "dueDate", "done"],
  "additionalProperties": false
}
